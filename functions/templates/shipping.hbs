<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title></title>
    <style>
        table tr,
        table td * {
            vertical-align: center;
            padding: 1px;
            color: black;
        }

        .title {
            border-top: 1px solid black;
            border-bottom: 1px solid black;
        }

        .footer {
            font-size: small;
            border-top: 1px solid black;
            line-height: 60px;
        }

        .href {
            font-size: medium;
            font-weight: 600;
        }

        .left {
            text-align: left;
        }

        .right {
            text-align: right;
        }

        img {
            width: 60px;
            padding: 0;
        }

        .outFrame {
            border: 3px #ff9800 solid;
        }

        tr.divider td {
            border-bottom: 2px gray dashed;
        }

        .w15 {
            width: 15%
        }

        .w70 {
            width: 70%
        }
    </style>

</head>

<body>
    <table width="100%" cellpadding="0" cellspacing="0" border="0" align="center">
        <tr>
            <td align="center">
                <table align="center" border="0" cellpadding="0" cellspacing="0" width="600">
                    <tr>
                        <td colspan="5">
                            <p>{{systemEmail}}</p>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="5">
                            <p class="title">{{orderDetail}}</p>
                            {{orderNo}}: {{id}}<br>
                            {{totalAmountLabel}}: {{currency}} {{totalAmount}}<br>
                            {{paymentMethodLabel}}: {{paymentMethod}}<br>
                            {{logisticsMethodLabel}}: {{logisticsMethod}}<br>
                            {{#if rewards}}
                            {{pointsRewardedLabel}}: {{rewards}}
                            {{/if}}
                        </td>
                    </tr>

                    <tr>
                        <td colspan="5">
                            <p class="title">{{itemDetail}}</p>
                        </td>
                    </tr>


                    <tr>
                        <th class="left" class="w70">{{displayNameLabel}}</th>
                        <th class="w15"></th>
                        <th class="w15">{{quantityLabel}}</th>
                    </tr>
                    {{#each items}}
                    <tr>
                        <td>
                            ({{code}}) {{displayName}}
                        </td>
                        <td>
                            {{#if qtyDiscount}}
                            <img src={{images.0.preview}} class="outFrame" />
                            {{/if}}
                            {{#unless qtyDiscount}}
                            <img src={{images.0.preview}} />
                            {{/unless}}
                        </td>
                        <td align="center">{{qty}}</td>
                    </tr>
                    {{/each}}

                    <tr>
                        <td colspan="5">
                            <p class="title">{{recipientLable}}</p>
                            {{nameLabel}}: {{name}} <br>
                            {{phoneLabel}}: {{phone}} <br>
                            {{#if isCVS}}
                            {{storeIdLabel}}: {{CVS.storeId}}
                            {{storeName}}: {{CVS.storeName}}
                            {{addressLabel}}: {{CVS.address}}<br>
                            {{/if}}
                            {{#unless isCVS}}
                            {{zipLabel}}: {{zip}} <br>
                            {{addressLabel}}: {{address}}<br>
                            {{countryLabel}}: {{country}}<br>
                            {{/unless}}
                        </td>
                    </tr>

                    <tr align="center">
                        <td colspan="5" class="footer">
                            <div class="href">
                                <a href={{href}}>{{APP_NAME}}</a>
                            </div>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
</body>

</html>